{
  "compilerOptions": {
    "target": "ES2021",                  // modern JS features
    "module": "commonjs",                // compatible with ts-node
    "strict": true,                      // strict type checking
    "esModuleInterop": true,             // allow default imports from commonjs
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,      // required by MikroORM
    "emitDecoratorMetadata": true,       // required by MikroORM
    "outDir": "dist",        
    "resolveJsonModule": true            // import JSON if needed
  },
  "include": ["./**/*.ts"]
}
